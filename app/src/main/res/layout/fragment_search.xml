<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivUserFollowersBack"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:src="@drawable/ic_back"
        app:layout_constraintLeft_toRightOf="@+id/searchView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:background="@drawable/search_bg"
        android:iconifiedByDefault="false"
        android:queryBackground="@null"
        android:queryHint="Latest Trend"
        android:searchIcon="@drawable/ic_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvSearch"
        app:layout_constraintRight_toLeftOf="@+id/ivUserFollowersBack"
        app:layout_constraintTop_toTopOf="parent">

    </SearchView>

    <TextView
        android:id="@+id/tvSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:text="Search"
        android:textColor="@color/orange"
        android:textSize="@dimen/_12sdp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/searchView"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/horiScrollViewSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivUserFollowersBack">

        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                style="@style/SearchChipBackGround"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest Trend"
                app:chipCornerRadius="7dp" />

            <com.google.android.material.chip.Chip
                style="@style/SearchChipBackGround"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest Trend"
                app:chipCornerRadius="7dp" />

            <com.google.android.material.chip.Chip
                style="@style/SearchChipBackGround"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest Trend"
                app:chipCornerRadius="7dp" />

            <com.google.android.material.chip.Chip
                style="@style/SearchChipBackGround"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest Trend"
                app:chipCornerRadius="7dp" />

            <com.google.android.material.chip.Chip
                style="@style/SearchChipBackGround"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest Trend"
                app:chipCornerRadius="7dp" />

            <com.google.android.material.chip.Chip
                style="@style/SearchChipBackGround"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest Trend"
                app:chipCornerRadius="7dp" />

            <com.google.android.material.chip.Chip
                style="@style/SearchChipBackGround"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest Trend"
                app:chipCornerRadius="7dp" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horiScrollViewSearch" />


</androidx.constraintlayout.widget.ConstraintLayout>